<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_style" >

    <include layout="@layout/title_act_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/white" >

        <TextView
            style="@style/tv_14_gray_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="订单号" />

        <TextView
            style="@style/tv_14_gray_color"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_down"
            android:hint="请选择订单号"
            android:textColor="@color/tv_purple"
            android:textColorHint="@color/tv_purple" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" >

        <TextView
            style="@style/tv_14_gray_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="上传照片" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:numColumns="3"
            android:visibility="gone" >
        </GridView>

        <RelativeLayout
            android:id="@+id/feedback_rl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/white" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/tj_03" />
        </RelativeLayout>
        
        <TextView 
            android:paddingLeft="3dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/feedback_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击添加图片"
            android:textColor="@color/white"
            android:background="@drawable/tj_06"
            android:textSize="12sp"/>
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:gravity="left|top"
        android:hint="反馈与投诉内容"
        android:maxLength="400"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/tv_purple"
        android:textColorHint="@color/tv_purple"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" >

            <Button
                android:id="@+id/feedback_btn"
                style="@style/green_btn"
                android:text="提交" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>