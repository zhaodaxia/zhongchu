<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="分享到"
            android:textColor="#000000"
            android:textSize="16sp" 
            android:id="@+id/share_dialogtitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" 
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/fx_03"
                android:gravity="center"
                android:text="朋友圈" 
                android:id="@+id/share_moments"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/fx_05"
                android:gravity="center"
                android:text="QQ" 
                android:id="@+id/share_qq"
               	/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/fx_07"
                android:gravity="center"
                android:text="新浪微博" 
                android:id="@+id/share_sina"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" 
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/fx_12"
                android:gravity="center"
                android:text="微信好友" 
                android:id="@+id/share_wechat"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/fx_13"
                android:gravity="center"
                android:text="腾讯微博" 
                android:id="@+id/share_tencent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/fx_14"
                android:gravity="center"
                android:text="QQ空间"
                android:id="@+id/share_zone" />
        </LinearLayout>
       <ImageView 
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/sharedialog_dismiss"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/dialog_dismiss"
        />
    </LinearLayout>
   
</LinearLayout>