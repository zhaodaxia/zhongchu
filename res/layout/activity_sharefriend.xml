<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_style"
    >
    <include layout="@layout/title_act_layout"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        >
      <com.cai.vegetables.widget.ClearEditText 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="写下你的邀请"
	    android:background="@null"
	   	android:padding="15dp"
	    />
      <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/bg_color"
	    android:layout_alignParentBottom="true"
	    android:padding="5dp"
	    android:gravity="center"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    >
	   <ImageView 
	       android:layout_width="40dp"
	       android:layout_height="40dp"
	       android:background="@drawable/ic_launcher"
	      
	       />
	   <TextView 
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:text="中国餐饮采购第一平台，给亲人买菜的APP,\n足不出户，新鲜到家!"
	       style="@style/tv_12_black_color"
	       /> 
	</LinearLayout>
    </RelativeLayout>

	<View 
	    android:layout_weight="1"
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    />
	<TextView 
	    android:text="邀请"
	   	style="@style/me_bottom"
	   	android:id="@+id/me_sharebutton"
	    />
</LinearLayout>