<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView 
            android:id="@+id/iv"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="@drawable/main_vp"
            android:layout_centerVertical="true"
            />
        
        <ImageView 
            android:id="@+id/ivArrow"
            style="@style/arrow_right"
            android:layout_alignParentRight="true"/>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ivArrow"
            android:layout_toRightOf="@id/iv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            
            <TextView 
                style="@style/tv_16_black_color"
                android:text="徐泾镇菜市场"
                	
                />
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:layout_marginTop="10dp"
                >
                <TextView style="@style/tv_14_black_color"
                    android:text="电话："/>
                <TextView style="@style/tv_14_gray_color"
                    android:text="021-222222"
                  />
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:layout_marginTop="10dp"
                >
                <TextView style="@style/tv_14_black_color"
                    android:text="地址："/>
                <TextView style="@style/tv_14_gray_color"
                    android:text="上海市青浦区明珠路128号"
                   />
                
            </LinearLayout>
        </LinearLayout>
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView style="@style/tv_14_gray_color"
                android:text="星级："
                android:layout_gravity="center_vertical"/>
            
            <RelativeLayout 
                android:layout_width="55dp"
                android:layout_height="24dp"
                android:background="@drawable/shop_star"
                android:layout_gravity="center_vertical"
                >
                <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="#ffffff"
                />
                
            </RelativeLayout>
            
            <View 
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#e7e7e7"
                android:layout_marginLeft="20dp"
                />
             
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                >
                
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView 
                        android:layout_width="22dp"
                        android:layout_height="18dp"
                        android:background="@drawable/cc_11"
                        android:layout_gravity="center_horizontal"
                        
                        />
                    
                    <TextView style="@style/tv_14_gray_color"
                        android:text="加入收藏"
                         android:layout_gravity="center_horizontal"/>
                    
                </LinearLayout>
                
                 <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView 
                        android:layout_width="22dp"
                        android:layout_height="18dp"
                        android:background="@drawable/cc_13"
                        android:layout_gravity="center_horizontal"
                        
                        />
                    
                    <TextView style="@style/tv_14_gray_color"
                        android:text="到这里去"
                         android:layout_gravity="center_horizontal"/>
                    
                </LinearLayout>
                
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e7e7e7"/>
    
</LinearLayout>