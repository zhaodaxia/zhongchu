<?xml version="1.0" encoding="UTF-8"?>
	<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_style"
    >
    <include layout="@layout/title_act_layout"/>
   	<RelativeLayout 
       	android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:background="@drawable/item_back"
        android:layout_marginTop="5dp"
        android:id="@+id/user_icon"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
       
        <TextView 
            style="@style/tv_14_black_color"
            android:text="我的头像"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
          
        <ImageView 
            android:id="@+id/icon_arrow"
            style="@style/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        
          <com.cai.vegetables.widget.CircleImageView 
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toLeftOf="@id/icon_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/me_login"
            android:id="@+id/user_header"
            />
        
    </RelativeLayout> 
	<RelativeLayout 
        style="@style/rl_item"
        android:layout_marginTop="5dp"
        android:id="@+id/rl_user_name"
        >
       
        <TextView 
            style="@style/tv_14_black_color"
            android:text="昵称"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
          
        <ImageView 
            android:id="@+id/data_arrow"
            style="@style/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        
          <TextView 
            style="@style/tv_12_gray_color"
            android:text="拎着背包去流浪"
            android:layout_toLeftOf="@id/data_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_username"
            />
        
    </RelativeLayout>
    <RelativeLayout 
        style="@style/rl_item"
        android:layout_marginTop="5dp"
        android:id="@+id/user_sex"
        >
       
        <TextView 
            style="@style/tv_14_black_color"
            android:text="性别"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
          
        <ImageView 
            android:id="@+id/sex_arrow"
            style="@style/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        
          <TextView 
            style="@style/tv_12_gray_color"
            android:text="男"
            android:layout_toLeftOf="@id/sex_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_usersex"
            />
        
    </RelativeLayout>
    <RelativeLayout 
        style="@style/rl_item"
        android:layout_marginTop="5dp"
        android:id="@+id/user_adress"
        >
       
        <TextView 
            style="@style/tv_14_black_color"
            android:text="我的收获地址"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
          
        <ImageView 
            style="@style/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        
   
    </RelativeLayout>
    <RelativeLayout 
        style="@style/rl_item"
        android:layout_marginTop="5dp"
        >
       
        <TextView 
            style="@style/tv_14_black_color"
            android:text="我的电话"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
                
          <TextView 
            style="@style/tv_12_gray_color"
            android:text="010-8888"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        
    </RelativeLayout>
    
    <View 
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:background="@drawable/wd_24"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/login_destory"
        />
</LinearLayout>