<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_style" >

    <include layout="@layout/title_act_layout" />

    <RelativeLayout
        android:id="@+id/rlAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/ivLocation"
            android:layout_width="20dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shop_location" />

        <ImageView
            android:id="@+id/ivArrow"
            style="@style/arrow_right"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/ivArrow"
            android:layout_toRightOf="@id/ivLocation"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tv_14_black_color"
                    android:text="收货人：冷面书生" />

                <TextView
                    style="@style/tv_14_black_color"
                    android:layout_alignParentRight="true"
                    android:text="138899999933" />
            </RelativeLayout>

            <TextView
                style="@style/tv_14_black_color"
                android:layout_marginTop="3dp"
                android:text="收获地址：上海 上海市 青浦区 徐泾镇 华徐公路888号" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:padding="10dp" >

        <RelativeLayout
            android:id="@+id/rlIv"
            android:layout_width="102dp"
            android:layout_height="62dp"
            android:background="@drawable/image_bg" >

            <ImageView
                android:id="@+id/iv"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@drawable/main_vp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/rlIv"
            android:orientation="vertical" >

            <TextView
                style="@style/tv_14_main_color"
                android:text="纯正山东金针菇" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tv_16_black_color"
                    android:text="500积分"
                    android:textColor="#e89951" />

                <TextView
                    style="@style/tv_12_gray_color"
                    android:text="／斤" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tv_12_gray_color"
                    android:text="兑换数量：" />

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/shop_x" >

                    <TextView
                        style="@style/tv_12_main_color"
                        android:layout_centerInParent="true"
                        android:text="5" />
                </RelativeLayout>

                <TextView
                    style="@style/tv_12_gray_color"
                    android:layout_marginLeft="3dp"
                    android:text="斤" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="5dp" >

        <TextView
            style="@style/tv_16_gray_color"
            android:layout_marginTop="10dp"
            android:text="订单编号：SH201509179879" />

        <TextView
            style="@style/tv_14_gray_color"
            android:layout_marginTop="5dp"
            android:text="商品单价：500积分/斤" />

        <TextView
            style="@style/tv_14_gray_color"
            android:layout_marginTop="5dp"
            android:text="兑换数量：5斤" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                style="@style/tv_14_gray_color"
                android:text="运费：5元" />

            <TextView
                style="@style/tv_14_green_color"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/zf_03"
                android:drawablePadding="3dp"
                android:text="运费说明" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/tv_14_gray_color"
                android:text="扣除积分：" />

            <TextView
                style="@style/tv_16_orange_color"
                android:text="2500分" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            style="@style/tv_14_gray_color"
            android:layout_centerVertical="true"
            android:text="您的积分余额：27857" />

        <Button
            android:id="@+id/exchange_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="确认兑换"
            android:background="@drawable/shop_coll_"
            android:textColor="@color/tv_purple"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>