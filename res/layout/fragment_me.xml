<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.cai.vegetables"
    style="@style/linear_style" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/main_color"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="我的众厨"
                    android:textColor="@color/main_text_color"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/fg_me_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/zccp_03" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#ffffff" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:background="@drawable/me_headbg" >

                    <LinearLayout
                        android:id="@+id/unlogin_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <com.cai.vegetables.widget.CircleImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/me_login" >
                        </com.cai.vegetables.widget.CircleImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="点击登陆，开始我的众厨"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tvLogin"
                            android:layout_width="67dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/login_btn"
                            android:gravity="center"
                            android:text="登陆" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/login_messageicon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/wd_13"
                        android:background="@drawable/wd_11"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/wd_13"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/wd_13"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/login_messagepoint"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="16dp"
                        android:layout_toLeftOf="@+id/wd_13"
                        android:src="@drawable/wd_07"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:id="@+id/login_header"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="118dp"
                        android:visibility="invisible" >

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:text="拎着背包去流浪"
                            android:textColor="@color/white" />

                        <TextView
                            style="@style/tv_12_black_color"
                            android:layout_below="@+id/user_name"
                            android:background="@drawable/wd_24"
                            android:paddingBottom="1dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="1dp"
                            android:text="未认证" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/wd_21" />
                    </RelativeLayout>
                </RelativeLayout>

                <com.cai.vegetables.widget.CircleImageView
                    android:id="@+id/login_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/wd_18"
                    android:visibility="invisible" >
                </com.cai.vegetables.widget.CircleImageView>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp" >

                <LinearLayout
                    android:id="@+id/me_order_nopay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/item_back"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/me1" />

                    <TextView
                        style="@style/tv_14_black_color"
                        android:layout_marginTop="5dp"
                        android:text="待付款" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/me_order_node"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/item_back"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/me2" />

                    <TextView
                        style="@style/tv_14_black_color"
                        android:layout_marginTop="5dp"
                        android:text="待发货" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/me_order_nore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/item_back"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/me3" />

                    <TextView
                        style="@style/tv_14_black_color"
                        android:layout_marginTop="5dp"
                        android:text="待收货" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/me_order_noco"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/item_back"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/me4" />

                    <TextView
                        style="@style/tv_14_black_color"
                        android:layout_marginTop="5dp"
                        android:text="待评价" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/me_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/item_back"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/me5" />

                    <TextView
                        style="@style/tv_14_black_color"
                        android:layout_marginTop="5dp"
                        android:text="飞喵快递" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/me_order"
                style="@style/rl_item"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/iv1"
                    style="@style/me_iv_style"
                    android:src="@drawable/me6" />

                <TextView
                    style="@style/tv_14_black_color"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv1"
                    android:text="我的订单" />

                <ImageView
                    android:id="@+id/arrow1"
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true" />

                <TextView
                    style="@style/tv_12_gray_color"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/arrow1"
                    android:text="查看全部订单" />
            </RelativeLayout>

            <!-- 我的账户 -->

            <RelativeLayout
                android:id="@+id/me_count"
                style="@style/rl_item"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/iv2"
                    style="@style/me_iv_style"
                    android:src="@drawable/me7" />

                <TextView
                    style="@style/tv_14_black_color"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv2"
                    android:text="我的账户" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/me_collect"
                style="@style/rl_item"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/iv3"
                    style="@style/me_iv_style"
                    android:src="@drawable/me8" />

                <TextView
                    style="@style/tv_14_black_color"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv3"
                    android:text="我的收藏" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/me_sharefriend"
                style="@style/rl_item"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/iv4"
                    style="@style/me_iv_style"
                    android:src="@drawable/me9" />

                <TextView
                    style="@style/tv_14_black_color"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv4"
                    android:text="邀请好友" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/me_join"
                style="@style/rl_item"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/iv5"
                    style="@style/me_iv_style"
                    android:src="@drawable/me10" />

                <TextView
                    style="@style/tv_14_black_color"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv5"
                    android:text="申请加盟" />

                <ImageView
                    android:id="@+id/arrow2"
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true" />

                <TextView
                    style="@style/tv_12_gray_color"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/arrow2"
                    android:text="人人都可以成为众厨联盟成员" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_service"
                style="@style/rl_item"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/iv6"
                    style="@style/me_iv_style"
                    android:src="@drawable/me11" />

                <TextView
                    style="@style/tv_14_black_color"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv6"
                    android:text="服务中心" />

                <ImageView
                    android:id="@+id/arrow3"
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true" />

                <TextView
                    style="@style/tv_12_gray_color"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/arrow3"
                    android:text="如需帮助请进" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>