<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_style"
    >
    <include layout="@layout/title_act_layout"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        
        <TextView 
            style="@style/tv_14_gray_color"
            android:text="收货人姓名"
            android:layout_centerVertical="true"
            />
        
        <EditText 
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textSize="14sp"
            android:hint="请输入收货人姓名"
            android:background="@null"
            android:textColorHint="@color/tv_black"
            android:textColor="@color/tv_black"
            android:layout_centerVertical="true"
            android:id="@+id/add_username"
            />
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        >
        
        <TextView 
            style="@style/tv_14_gray_color"
            android:text="手机号"
            android:layout_centerVertical="true"
            />
        
        <EditText 
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textSize="14sp"
            android:hint="请输入收货人手机号"
            android:background="@null"
            android:inputType="number"
            android:textColorHint="@color/tv_black"
            android:textColor="@color/tv_black"
            android:layout_centerVertical="true"
            android:id="@+id/add_usernumber"
            />
    </RelativeLayout>
    
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        
        <TextView 
            style="@style/tv_14_gray_color"
            android:text="邮政编码"
            android:layout_centerVertical="true"
            />
        
        <EditText 
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textSize="14sp"
            android:hint="请输入收获地址邮政编码"
            android:background="@null"
            android:textColorHint="@color/tv_black"
            android:textColor="@color/tv_black"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    
       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/choose_zone"
        >
        
        <TextView 
            style="@style/tv_14_black_color"
            android:text="请选择省市区"
            android:layout_centerVertical="true"
            android:id="@+id/tv_adress"
            />
        
    </RelativeLayout>
    
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
      android:padding="10dp"
        >
        
        
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:hint="详细街道地址"
            android:background="@null"
            android:textColorHint="@color/tv_black"
            android:textColor="@color/tv_black"
            android:id="@+id/add_useraddress"
            />
    </RelativeLayout>
    
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            
            >
        
            <TextView 
            style="@style/tv_14_black_color"
            android:text="设置为默认收获地址"
            android:layout_centerVertical="true"
            />
            
            <RelativeLayout 
                android:id="@+id/rlTogg"
                android:layout_width="57dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                >
                <ImageView 
                    android:id="@+id/ivOn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/toggle_on"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
                
                <ImageView 
                    android:id="@+id/ivOff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/toggle_off"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            
        </RelativeLayout>
        
        </LinearLayout>
        
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        >
        
        <TextView 
            android:id="@+id/tvSave"
            android:layout_width="105dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="保存"
            android:textColor="#ffffff"
            android:background="@drawable/grey_bg"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    
</LinearLayout>