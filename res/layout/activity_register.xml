<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_style" >

    <include layout="@layout/title_act_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/mobile_bg" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="@string/input_name"
            android:singleLine="true"
            android:textSize="14sp" />

        <View 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tvGetCode"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="获取验证码"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/code_bg" />

        <EditText
            android:id="@+id/etCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/pwd_bg" />

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="@string/input_pwd"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >
        <CheckBox 
            android:id="@+id/tvCb"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:checked="false"
            android:button="@drawable/checked_button_bg"
            />
        <TextView 
            android:id="@+id/tvAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/main_text_color"
            android:text="我同意并遵守《众厨联盟注册及使用条款协议》"
            android:layout_marginLeft="5dp"
            />
        
    </LinearLayout>

    <TextView
        android:id="@+id/tvRegister"
        style="@style/button_style"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="快速注册" />

    <View 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    
    <TextView 
        android:id="@+id/tvToLogin"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="已有账号，快速登陆"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/main_text_color"
        android:background="@drawable/item_back"
        />
</LinearLayout>