<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/cancel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="确定要取消此次用车吗？"
        android:textColor="#1c425a"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cancel_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="取消后不可恢复，需重新下单"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel_obtn"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:background="@drawable/qxts_03"
            android:text="确定"
            android:textColor="@color/tv_black"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/cancel_cbtn"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/grey_bg"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>