<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_style" >

    <include layout="@layout/title_act_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" >

        <TextView
            style="@style/tv_14_gray_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="菜谱名称" />

        <EditText
            android:id="@+id/ed_cookname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请输入菜谱名称"
            android:maxLength="20"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/tv_purple"
            android:textColorHint="@color/tv_purple"
            android:textSize="14sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/ed_cookdes"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="left|top"
        android:hint="菜谱描述"
        android:maxLength="400"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/tv_purple"
        android:textColorHint="@color/tv_purple"
        android:textSize="14sp" />

    <RelativeLayout
        style="@style/rl_item"
        android:layout_marginTop="10dp" 
        android:id="@+id/rl_chooselevel">

        <TextView
            style="@style/tv_14_gray_color"
            android:layout_centerVertical="true"
            android:text="请选择难易程度"
            android:textColor="@color/tv_purple" />

        <TextView
            style="@style/tv_14_gray_color"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:textColor="@color/tv_purple"
            android:id="@+id/tv_level"
            android:text="简单" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_down" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/rl_item"
        android:layout_marginTop="10dp"
        android:id="@+id/rl_choosestye" >

        <TextView
            style="@style/tv_14_gray_color"
            android:layout_centerVertical="true"
            android:text="请选择所属菜系"
            android:textColor="@color/tv_purple" />

        <TextView
            style="@style/tv_14_gray_color"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:textColor="@color/tv_purple" 
            android:id="@+id/tv_cookstye"
            android:text="中餐"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_down" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <Button
            android:id="@+id/releasefir_btn"
            style="@style/green_btn"
            android:text="下一步" />
    </RelativeLayout>

</LinearLayout>