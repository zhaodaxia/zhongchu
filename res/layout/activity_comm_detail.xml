<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_style" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color" >

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="goback"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/top_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="菜场详情"
            android:textColor="@color/main_text_color"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/one_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/zccp_03" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp" >

                    <!-- 查看照片 -->

                    <LinearLayout
                        android:id="@+id/llPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/rLphoto"
                            android:layout_width="100dp"
                            android:layout_height="70dp" >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/main_vp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="5dp"
                                android:text="8"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <TextView
                            style="@style/tv_14_black_color"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:text="查看照片"
                            android:textColor="#66ac2f" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/llPhoto"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/tv_14_black_color"
                            android:text="徐泾镇生活广场－－徐泾菜场" />

                        <TextView
                            style="@style/tv_12_gray_color"
                            android:layout_marginTop="10dp"
                            android:text="6.3万人已收藏" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/tv_12_black_color"
                                android:text="已认证" 
                                android:background="@drawable/xq_09"
                                android:gravity="center"
                                android:textColor="#ffffff"/>

                            <TextView
                                style="@style/tv_12_black_color"
                                android:layout_marginLeft="20dp"
                                android:text="星级:" />
                            
                            <LinearLayout 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                >
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/xq_12"
                                 />

                            <TextView
                                style="@style/tv_12_gray_color"
                                android:text="4.9"
                                android:textColor="#e89951" />
                            
                            </LinearLayout>
                            <View android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            
                              <LinearLayout 
                                  android:layout_width="70dp"
                                android:layout_height="31dp"
                                android:orientation="horizontal"
                                 android:background="@drawable/similar"
                                 android:gravity="center"
                                  >
                                  <ImageView 
                                      android:layout_width="16dp"
                                      android:layout_height="16dp"
                                      android:background="@drawable/xq_06"
                                      />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                               
                                android:gravity="center"
                                android:text="收藏"
                                android:textColor="#66ac2f"
                                android:textSize="16sp" 
                                />
                            
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    style="@style/view_line"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/tv_14_black_color"
                            android:text="环境：" />

                        <TextView
                            style="@style/tv_14_gray_color"
                            android:text="4.7分" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#e7e7e7" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/tv_14_black_color"
                            android:text="卫生：" />

                        <TextView
                            style="@style/tv_14_gray_color"
                            android:text="4.7分" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#e7e7e7" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/tv_14_black_color"
                            android:text="服务：" />

                        <TextView
                            style="@style/tv_14_gray_color"
                            android:text="4.7分" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <View android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#e7e7e7"/>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
                
                <ImageView 
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cx_03"
                    android:layout_centerVertical="true"
                    />
                
                <TextView 
                    style="@style/tv_14_black_color"
                    android:text="上海市青浦区明珠路128号和森生活广场"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv1"
                    android:layout_marginLeft="10dp"
                    />
                
                <ImageView 
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true"
                    />
                
            </RelativeLayout>
            
            <View style="@style/view_line"/>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
                
                <ImageView 
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cx_06"
                    android:layout_centerVertical="true"
                    />
                
                <TextView 
                    style="@style/tv_14_black_color"
                    android:text="营业时间：早6:00至晚21:00"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv2"
                    android:layout_marginLeft="10dp"
                    />
                
                <ImageView 
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true"
                    />
                
            </RelativeLayout>
            
            <View style="@style/view_line"/>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                >
                
                <ImageView 
                    android:id="@+id/iv3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_launcher"
                    android:layout_centerVertical="true"
                    />
                
                <TextView 
                    style="@style/tv_14_black_color"
                    android:text="400—920-8018"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv3"
                    android:layout_marginLeft="10dp"
                    />
                
                <ImageView 
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true"
                    />
                
            </RelativeLayout>
            
            <View style="@style/view_line"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                 android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
            <RelativeLayout 
                android:id="@+id/rlIntro"
                android:layout_width="match_parent"
                android:layout_height="36dp"
               
                >
                
                <TextView 
                    style="@style/tv_14_black_color"
                    android:text="菜场介绍"
                    android:layout_centerVertical="true"
                    />
                
                <ImageView 
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true"
                    />
                
            </RelativeLayout>
            
            <View style="@style/view_line"/>
            
            <TextView style="@style/tv_12_gray_color"
                android:text="阿里咖啡机阿隆索放假啊可怜啊放假啊放假啊开发卡阿三放假啊开发"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            
            </LinearLayout>
            
            <View android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#e7e7e7"/>
            
            <!-- 评论 -->
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                >
            
                <TextView 
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="用户点评（213）"
                android:textSize="14sp"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                />
                
                <View style="@style/view_line"/>
                
                <com.leaf.library.widget.MyListView
                    android:id="@+id/lvComm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    ></com.leaf.library.widget.MyListView>
                <include layout="@layout/layout_load_bottom"/>
            </LinearLayout>
            
            
            
        </LinearLayout>
    </ScrollView>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >
            
            <TextView 
                android:id="@+id/tvStartShop"
                style="@style/tv_14_black_color"
                android:text="开始购物"
                android:layout_marginRight="10dp"
                android:background="@drawable/cx_11"
                android:gravity="center"
                android:textColor="#ffffff"
                />
            
            <TextView 
                android:id="@+id/tvComment"
                style="@style/tv_14_black_color"
                android:text="写点评"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cx_13"
                android:gravity="center"
                android:textColor="#ffffff"
                />
            
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>